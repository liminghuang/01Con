{
  "manifest_version": 3,
  "name": "Mobile01 Thread AI Summary",
  "description": "Summarize all pages of a Mobile01 thread with OpenAI.",
  "version": "1.0.0",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.mobile01.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
