{
  "manifest_version": 3,
  "name": "Mobile01 Thread AI Summary",
  "description": "Summarize all pages of a Mobile01 thread with OpenAI.",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.mobile01.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
